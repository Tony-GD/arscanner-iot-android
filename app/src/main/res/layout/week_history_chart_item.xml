    app:shape_roundRect_bottomRightRadius="@dimen/radius_4"
    app:shape_roundRect_topLeftRadius="@dimen/radius_4"
    app:shape_roundRect_topRightRadius="@dimen/radius_4"
    android:layout_margin="@dimen/margin_20"
    android:layout_width="@dimen/size_154"
    android:layout_height="@dimen/size_154">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_154"
        android:layout_height="@dimen/size_154"
