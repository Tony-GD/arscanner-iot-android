<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ghost_background"
    android:padding="@dimen/widget_margin">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/appwidget_sensor_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_humidity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            android:text="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appwidget_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold"
            tools:text="@string/appwidget_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appwidget_special_sensor_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appwidget_sensor_data"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_special_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold"
            tools:text="@string/appwidget_text" />

        <TextView
            android:id="@+id/appwidget_special_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold"
            tools:text="@string/appwidget_text" />

        <TextView
            android:id="@+id/appwidget_special_co2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold"
            tools:text="@string/appwidget_text" />

        <TextView
            android:id="@+id/appwidget_special_humidity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_text"
            style="@style/AppText.SourceSansPro.White.14"
            android:textStyle="bold"
            tools:text="@string/appwidget_text" />
    </LinearLayout>
</RelativeLayout>